@page "/clientes"

@using System.Globalization

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Clientes</h2>
            <p class="text-muted">Gerencie seus clientes</p>
        </div>
        <button class="btn btn-primary rounded-3 shadow-sm">
            <i class="bi bi-plus"></i> Novo Cliente
        </button>
    </div>

    <div class="mb-4">
        <input class="form-control rounded-pill" placeholder="Pesquisar por nome, email ou telefone..." />
    </div>

    <div class="row g-4">
        @foreach (var cliente in Clientes)
        {
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex">
                        <div class="me-3">
                            <div class="bg-danger text-white rounded-circle d-flex justify-content-center align-items-center"
                                 style="width: 48px; height: 48px; font-weight: bold; font-size: 1.2rem;">
                                @cliente.Nome.Substring(0, 1).ToUpper()
                            </div>
                        </div>
                        <div>
                            <h5 class="mb-1">@cliente.Nome</h5>
                            <p class="mb-1 text-muted"><i class="bi bi-envelope me-1"></i> @cliente.Email</p>
                            <p class="mb-1 text-muted"><i class="bi bi-telephone me-1"></i> @cliente.Telefone</p>
                            <small class="text-muted">Cliente desde @cliente.DataCadastro.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    public class Cliente
    {
        public string Nome { get; set; }
        public string Email { get; set; }
        public string Telefone { get; set; }
        public DateTime DataCadastro { get; set; }
    }

    public List<Cliente> Clientes = new()
    {
        new Cliente { Nome = "Maria Silva", Email = "maria.silva@email.com", Telefone = "(11) 98765-4321", DataCadastro = new DateTime(2025, 07, 03) },
        new Cliente { Nome = "João Santos", Email = "joao.santos@email.com", Telefone = "(11) 97654-3210", DataCadastro = new DateTime(2025, 07, 03) },
        new Cliente { Nome = "Ana Costa", Email = "ana.costa@email.com", Telefone = "(11) 96543-2109", DataCadastro = new DateTime(2025, 07, 03) },
    };
}
